<h1>Users</h1>

<table>
  <tr>
    <th>username</th>
    <th>password</th>
    <th>created_at</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.password_hash %></td>
    <td><%= link_to 'Show' ,    user_path(:username => user.username) %></td>
    <td><%= link_to 'Edit' ,    edit_user_path(:username => user.username) %></td>
    <td><%= link_to 'Destroy', user_path(:username => user.username), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>

